<resources>

    <!-- Aman Theme -->
    <style name="AmanTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/primary_50</item>
        <item name="colorPrimaryDark">@color/primary_800</item>
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorAccent">@color/secondary_assent</item>
    </style>

    <style name="AmanTheme.AppBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/primary_500</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AmanTheme.AppBar.Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/secondary_assent</item>
    </style>
</resources>
