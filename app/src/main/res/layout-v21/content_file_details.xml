<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.amanapp.application.activities.FileDetailsActivity"
    tools:showIn="@layout/activity_file_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/global_padding_small">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:orientation="vertical"
            android:translationZ="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/text_margin"
                                android:text="Name"
                                android:textSize="@dimen/text_size_default" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/change_name_icon"
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackground"
                            android:contentDescription="Rename File"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_edit_black_24px" />

                        <TextView
                            android:id="@+id/file_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="file location"
                            android:textSize="@dimen/text_size_default" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/text_margin"
                                android:text="Type"
                                android:textSize="@dimen/text_size_default" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/file_icon"
                            android:layout_width="@dimen/icon_size_small"
                            android:layout_height="@dimen/icon_size_small"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="icon"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_folder_blue_36dp" />

                        <TextView
                            android:id="@+id/file_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="file type"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <include layout="@layout/divider" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/text_margin"
                                android:text="Size"
                                android:textSize="@dimen/text_size_default" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/file_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="file type"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <include layout="@layout/divider" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/text_margin"
                                android:text="Folder"
                                android:textSize="@dimen/text_size_default" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/file_folder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="file's folder"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <include layout="@layout/divider" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/text_margin"
                                android:text="Created"
                                android:textSize="@dimen/text_size_default" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/file_created"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="file created"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <include layout="@layout/divider" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/cardview_height">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="95dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/text_margin"
                                android:text="Modified"
                                android:textSize="@dimen/text_size_default" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/file_modified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="file modified"
                            android:textSize="@dimen/text_size_default" />
                    </LinearLayout>

                    <include layout="@layout/divider" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/delete_button"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_margin"
            android:text="@string/delete_the_file" />


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
